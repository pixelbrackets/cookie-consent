# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
indent_size = 2

### Assets
[{*.css,*.less,*.js}]
indent_style = space
indent_size = 2

### TYPO3
[*.php]
indent_style = space
indent_size = 4

[{*.typoscript,*.tsconfig,*.ts}]
indent_style = space
indent_size = 2

[*.sql]
indent_style = tab
indent_size = 2

[{*.xml,*.xlf}]
indent_style = tab
indent_size = 4

[{*.html,*.tmpl}]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

### Docs
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.rst]
indent_style = space
indent_size = 3

[*.txt]
trim_trailing_whitespace = false

### Misc
[{*.conf,*.cnf}]
indent_style = space
indent_size = 4

[{*.json,*.yml,*.yaml,build.xml}]
indent_style = space
indent_size = 2

[*.feature]
indent_style = space
indent_size = 2

[{composer.json,composer.lock}]
indent_style = space
indent_size = 4
